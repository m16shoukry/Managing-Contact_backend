{
   "compilerOptions": {
     "target": "es2016",
     "module": "commonjs",
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,           
     "esModuleInterop": true,
     "outDir": "./dist",
     "sourceMap": true, 
     "strict": true,
     "noImplicitAny": false, 
     "forceConsistentCasingInFileNames": true,
     "skipLibCheck": true,
     "resolveJsonModule": true,
   },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
 }